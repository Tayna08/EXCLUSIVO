<UserControl x:Class="NovoTayUmDoce.Componentes.CompraFormUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NovoTayUmDoce.Componentes"
           mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="Bisque" Margin="0,-4,0,4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,361,0,0" Width="420" Height="67">
            <Button x:Name="btCancelar" Content="CANCELAR" Background="#FFFFA4A4" Margin="18,0,100,10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="52" Width="133" Foreground="#DD000000" FontWeight="Bold" Click="btCancelar_Click" Cursor="Hand"/>
            <Button x:Name="btSalvar" Content="SALVAR" Background="#FFFFA4A4" Margin="18,0,100,10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="52" Width="133" Foreground="#DD000000" FontWeight="Bold" Click="btSalvar_Click" Cursor="Hand"/>
        </StackPanel>

        <StackPanel Margin="50,45,78,520">
            <Label Content="NOME:"/>
            <TextBox x:Name="tbNome" TextWrapping="Wrap" Background="White" Height="30"/>
        </StackPanel>

        <StackPanel Margin="307,170,449,402">
            <Label Content="VALOR:" Width="52"/>
        </StackPanel>

        <StackPanel Margin="307,195,315,369">
            <TextBox x:Name="tbValor" TextWrapping="Wrap" Background="White" Height="27" Width="276"/>
        </StackPanel>

        <StackPanel Margin="550,177,94,369">
            <Label Content="DATA COMPRA:"/>
            <DatePicker x:Name="dtpDataCompra" Height="28"/>
        </StackPanel>

        <StackPanel Margin="50,170,588,330">
            <Label Content="QUANTIDADE:"/>
            <TextBox x:Name="tbQuantidade" TextWrapping="Wrap" Background="White" Grid.Row="1"/>
        </StackPanel>

        <StackPanel Margin="50,110,78,389">
            <Label Content="DESCRIÇÃO:"/>
            <TextBox x:Name="tbDescricao" TextWrapping="Wrap" Background="White" Grid.Row="1"/>
        </StackPanel>

    </Grid>

</UserControl>
 