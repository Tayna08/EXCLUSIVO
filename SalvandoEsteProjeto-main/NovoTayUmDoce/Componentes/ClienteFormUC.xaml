<UserControl x:Class="NovoTayUmDoce.Componentes.ClienteFormUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NovoTayUmDoce.Componentes"
             mc:Ignorable="d" >

    <Grid Background="Bisque" Margin="10,0,-10,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>



        <Grid>
            <StackPanel Margin="40,80,208,496">
                <Label Content="NOME:"/>
            </StackPanel>
            <StackPanel Margin="90,80,40,511">
                <TextBox x:Name="tbNome" TextWrapping="Wrap" Background="White" Height="30"/>
            </StackPanel>
        </Grid>


        <Grid>
            
            <StackPanel Margin="680,130,450,511">
                <Label Content="CONTATO:" Width="288" HorizontalAlignment="Left"/>
            </StackPanel>
            <StackPanel Margin="750,130,40,461">
                <TextBox x:Name="tbContato" TextWrapping="Wrap" Background="White" Height="27"/>
            </StackPanel>
           
        </Grid>
        <Grid>
            <StackPanel Margin="40,130,911,461">
                <Label Content="CPF:"/>
            </StackPanel>
            <StackPanel Margin="90,130,743,461">
                <TextBox x:Name="tbCpf" TextWrapping="Wrap" Background="White" Height="27"/>
            </StackPanel>
        </Grid>



        <StackPanel Margin="40,185,990,422">
            <Label Content="DATA NASCIMENTO:" Width="116" HorizontalAlignment="Left" />
        </StackPanel>
        <StackPanel Margin="457,185,420,422">
            <DatePicker x:Name="dtpData" Height="25" Background="White"/>
        </StackPanel>
        <StackPanel Margin="687,185,40,403">
            <Label Content="BAIRRO:"/>
        </StackPanel>
        <StackPanel Margin="747,185,40,403">
            <TextBox x:Name="tbBairro" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>


        <StackPanel Margin="40,230,711,352">
            <Label Content="RUA:" Width="652"/>
        </StackPanel>
        <StackPanel  Margin="373,230,390,352">
            <TextBox x:Name="tbRua" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>
        <StackPanel Margin="717,230,272,352">
            <Label Content="N°" Width="194"/>
        </StackPanel>
        <StackPanel  Margin="747,230,40,352">
            <TextBox x:Name="tbNumero" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>



        <StackPanel Margin="40,280,651,297">
            <Label Content="COMPLEMENTO:"/>
        </StackPanel>
        <StackPanel  Margin="437,280,390,264">
            <TextBox x:Name="tbComplemento" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>
        <StackPanel Margin="715,280,40,289">
            <Label Content="CIDADE:"/>
        </StackPanel>
        <StackPanel Margin="767,280,40,301">
            <TextBox x:Name="tbCidade" TextWrapping="Wrap" Background="White" Height="27" Width="294"/>
        </StackPanel>







        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="789,361,0,0" Width="420" Height="67">
            <Button x:Name="btSalvar" Content="SALVAR" Background="#FFFFA4A4" Margin="18,0,100,10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="50" Width="137" Foreground="#DD000000" FontWeight="Bold" Click="btSalvar_Click"/>
            <Button x:Name="btCancelar" Content="CANCELAR" Background="#FFFFA4A4" Margin="18,0,100,10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="52" Width="133" Foreground="#DD000000" FontWeight="Bold" Click="btCancelar_Click" Cursor="Hand"/>
        </StackPanel>

    </Grid>
</UserControl>
