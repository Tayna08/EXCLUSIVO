<UserControl x:Class="NovoTayUmDoce.Componentes.ClienteFormUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NovoTayUmDoce.Componentes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Bisque">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="312*"/>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="136*"/>
            <ColumnDefinition Width="307*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

     

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="190,361,0,0" Width="420" Height="67" Grid.ColumnSpan="4">
            <Button x:Name="btSalvar" Content="SALVAR" Background="#FFFFA4A4" Margin="18,0,100,10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="50" Width="137" Foreground="#DD000000" FontWeight="Bold" Click="btSalvar_Click"/>
            <Button x:Name="btCancelar" Content="CANCELAR" Background="#FFFFA4A4" Margin="18,0,100,10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="52" Width="133" Foreground="#DD000000" FontWeight="Bold" Click="btCancelar_Click"/>
        </StackPanel>

        <StackPanel Margin="50,40,208,336" Grid.ColumnSpan="4">
            <Label Content="NOME:"/>
        </StackPanel>
        <StackPanel Margin="100,40,40,336" Grid.ColumnSpan="4">
            <TextBox x:Name="tbNome" TextWrapping="Wrap" Background="White" Height="30"/>
        </StackPanel>

        <StackPanel Margin="50,95,36,281" Grid.ColumnSpan="2">
            <Label Content="CPF:"/>
            <TextBox x:Name="tbCpf" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="50,155,12,218">
            <Label Content="DATA NASCIMENTO:"/>
            <DatePicker x:Name="dtpData" Height="28" VerticalAlignment="Top"/>
        </StackPanel>

        <StackPanel Margin="23,155,208,221" Grid.ColumnSpan="3" Grid.Column="1">
            <Label Content="BAIRRO:"/>
            <TextBox x:Name="tbBairro" TextWrapping="Wrap" Background="White" Height="27" Width="226"/>
        </StackPanel>

        <StackPanel Margin="28,215,52,161" Grid.ColumnSpan="2" Grid.Column="2">
            <Label Content="CIDADE:"/>
            <TextBox x:Name="tbCidade" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="50,215,5,163" Grid.ColumnSpan="2">
            <Label Content="RUA:"/>
            <TextBox x:Name="tbRua" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="19,270,52,100" Grid.Column="3">
            <Label Content="NÚMERO:"/>
            <TextBox x:Name="tbNumero" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="50,270,18,100" Grid.ColumnSpan="3">
            <Label Content="COMPLEMENTO:"/>
            <TextBox x:Name="tbComplemento" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="1,95,208,278" Grid.ColumnSpan="2" Grid.Column="2">
            <Label Content="CONTATO:"/>
            <TextBox x:Name="tbContato" TextWrapping="Wrap" Background="White" Grid.Row="1" Width="493" RenderTransformOrigin="0.5,0.5">
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-0.022"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>
        </StackPanel>

    </Grid>
</UserControl>
