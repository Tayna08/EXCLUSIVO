<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NovoTayUmDoce.Componentes"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="NovoTayUmDoce.Componentes.ProdutoFormUC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="Bisque" Margin="0,-4,0,4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="312*"/>
            <ColumnDefinition Width="73*"/>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="332*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="190,361,0,0" Width="420" Height="67" Grid.ColumnSpan="5">
            <Button x:Name="btCancelar" Content="CANCELAR" Background="#FFFFA4A4" Margin="18,0,100,10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="52" Width="133" Foreground="#DD000000" FontWeight="Bold" Click="btCancelar_Click" Cursor="Hand"/>
            <Button x:Name="btSalvar" Content="SALVAR" Background="#FFFFA4A4" Margin="18,0,100,10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="52" Width="133" Foreground="#DD000000" FontWeight="Bold" Click="btSalvar_Click" Cursor="Hand"/>
        </StackPanel>

        <StackPanel Margin="50,40,126,1500">
            <Label Content="NOME:"/>
        </StackPanel>
        <StackPanel Margin="55,40,6,1490" Grid.ColumnSpan="2">
            <TextBox x:Name="tbNOme" TextWrapping="Wrap" Background="White" Height="30" Width="234" RenderTransformOrigin="-0.034,0.668"/>
        </StackPanel>

        <StackPanel Margin="50,90,126,1446">
            <Label Content="VALOR GASTO:"/>
        </StackPanel>
        <StackPanel Margin="55,90,6,1446" Grid.ColumnSpan="2">
            <TextBox x:Name="tbValorGas" TextWrapping="Wrap" Background="White" Height="29" Width="157" RenderTransformOrigin="-0.034,0.668"/>
        </StackPanel>

        <StackPanel Margin="1,50,308,1490" Grid.Column="3" Grid.ColumnSpan="2">
            <Label Content="DESCRIÇÃO:"/>
        </StackPanel>
        <StackPanel Margin="41,50,40,1485" Grid.Column="4">
            <TextBox x:Name="tbDescricao" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="10,146,269,1391" Grid.Column="3" Grid.ColumnSpan="2">
            <Label Content="ESTOQUE MÉDIO:"/>
        </StackPanel>
        <StackPanel  Margin="60,147,39,1391" Grid.Column="4">
            <TextBox x:Name="tbEstMedio" TextWrapping="Wrap" Background="White" Height="26"/>
        </StackPanel>

        <StackPanel Margin="1,201,288,1332" Grid.Column="3" Grid.ColumnSpan="2">
            <Label Content="ESTOQUE MÁXIMO:"/>
        </StackPanel>
        <StackPanel Margin="41,201,40,1332" Grid.Column="4">
            <TextBox x:Name="tbEstMaximo" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="1,250,308,1294" Grid.Column="3" Grid.ColumnSpan="2">
            <Label Content="TIPO:"/>
        </StackPanel>
        <StackPanel Margin="41,250,40,1279" Grid.Column="4">
            <TextBox x:Name="tbTipoPro" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="50,247,5,1294" Grid.ColumnSpan="2">
            <Label Content="QUANTIDADE:"/>
        </StackPanel>
        <StackPanel Margin="140,245,64,1283" Grid.ColumnSpan="2">
            <TextBox x:Name="tbQuantidade" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="50,197,5,1332" Grid.ColumnSpan="2">
            <Label Content="HORA:"/>
        </StackPanel>
        <StackPanel Margin="41,108,51,1349">
            <materialDesign:TimePicker x:Name="TiHORA" HorizontalAlignment="Left" Margin="68,91,0,0" Grid.ColumnSpan="3" Width="137" Height="27"/>
        </StackPanel>

        <StackPanel Margin="50,299,161,1238">
            <Label Content="PESO:"/>
        </StackPanel>
        <StackPanel Margin="120,295,6,1238" Grid.ColumnSpan="4">
            <TextBox x:Name="tbPeso" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="27,145,153,1400">
            <Label Content="VALOR VENDA:" Width="96" Height="28"/>
        </StackPanel>
        <StackPanel Margin="135,145,5,1400" Grid.ColumnSpan="2" >
            <TextBox x:Name="tbValorVenda" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="34,90,288,1446" Grid.Column="3" Grid.ColumnSpan="2">
            <Label Content="DATA FABRICAÇÃO:" Width="115" Height="28"/>
        </StackPanel>
        <StackPanel Margin="0,79,40,1446" Grid.Column="4">
            <DatePicker x:Name="dtpData" Grid.Column="4" HorizontalAlignment="Left" Margin="50,0,0,0" Width="242" Height="38"/>
        </StackPanel>

        <StackPanel Margin="19,296,233,1236" Grid.Column="4" RenderTransformOrigin="0.5,0.5">
            <StackPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.394"/>
                    <RotateTransform/>
                    <TranslateTransform X="1.593"/>
                </TransformGroup>
            </StackPanel.RenderTransform>
        </StackPanel>
        <StackPanel Margin="76,296,40,1238" Grid.Column="4"/>




    </Grid>

</UserControl>
 

