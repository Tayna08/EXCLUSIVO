<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NovoTayUmDoce.Componentes"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="NovoTayUmDoce.Componentes.ProdutoFormUC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="Bisque" Margin="0,-4,0,4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>


        <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Center">
            <Button x:Name="btCancelar" Content="FECHAR" Margin="10" Background="#FFFFA4A4" Height="52" Width="142" Foreground="#DD000000" FontWeight="Bold" Click="btCancelar_Click" Cursor="Hand"/>
            <Button x:Name="btGerenciar" Content="GERENCIAR(EST)"  Margin="10" Background="#FFFFA4A4" Height="52" Width="145" Foreground="#DD000000" FontWeight="Bold" Cursor="Hand" Click="btGerenciar_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <WrapPanel Margin="0 20 0 0">
                <Label Content="DESCRIÇÃO:" Width="100"/>
                <TextBox Background="White" x:Name="tbDescricao" Width="400" />
            </WrapPanel>
            <WrapPanel Margin="0 25 0 0">
                <Label Content="VALOR VENDA:" Width="100"/>
                <TextBox Background="White" x:Name="tbValorVenda" Width="400" TextChanged="tbValorVenda_TextChanged" />
            </WrapPanel>
        </StackPanel>

        <StackPanel VerticalAlignment="Center" Grid.Column="0" Height="120">
            <WrapPanel>
                <Label Content="NOME:" Width="100" />
                <TextBox Background="White" x:Name="tbNome" Width="400"/>
            </WrapPanel>

            <WrapPanel Margin="0 20 0 0">
                <Label Content="PESO:" Width="100"/>
                <TextBox Background="White" x:Name="tbPeso" Width="400" />
            </WrapPanel>
            <WrapPanel Margin="0 25 0 0">
                <Label Content="TIPO:" Width="100"/>
                <TextBox Background="White" x:Name="tbTipo" Width="400" />
            </WrapPanel>

        </StackPanel>

    </Grid>
</UserControl>


 

