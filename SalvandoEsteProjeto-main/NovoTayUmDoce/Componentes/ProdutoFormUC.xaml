<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NovoTayUmDoce.Componentes"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="NovoTayUmDoce.Componentes.ProdutoFormUC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="Bisque" Margin="0,-4,0,4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1619"/>
        </Grid.RowDefinitions>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,361,0,0" Width="420" Height="67">
            <Button x:Name="btGerenciarEst" Content="GERENCIAR(EST)" Background="#FFFFA4A4" Margin="18,0,100,10" VerticalAlignment="Bottom" Height="52" Width="148" Foreground="#DD000000" FontWeight="Bold" Click="btGerenciarEst_Click" Cursor="Hand"/>
            <Button x:Name="btSalvar" Content="SALVAR" Background="#FFFFA4A4" Margin="18,0,100,10" VerticalAlignment="Bottom" Height="52" Width="136" Foreground="#DD000000" FontWeight="Bold" Click="btSalvar_Click" Cursor="Hand"/>
        </StackPanel>

        <StackPanel Margin="50,44,700,1504">
            <Label Content="NOME:" Width="62"/>
        </StackPanel>

        <StackPanel Margin="105,44,448,1517">
            <TextBox x:Name="tbNOme" TextWrapping="Wrap" Background="White" Height="30" Width="247" RenderTransformOrigin="-0.034,0.668"/>
        </StackPanel>

        <StackPanel Margin="50,298,673,1298">
            <Label Content="DESCRIÇÃO:"/>
        </StackPanel>

        <StackPanel Margin="127,298,422,1291">
            <TextBox x:Name="tbDescricao" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>


        <StackPanel Margin="50,225,709,1368">
            <Label Content="TIPO:"/>
        </StackPanel>
        <StackPanel Margin="105,225,444,1358">
            <TextBox x:Name="tbTipoPro" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="50,140,700,1453">
            <Label Content="PESO:"/>
        </StackPanel>
        <StackPanel Margin="105,137,557,1450">
            <TextBox x:Name="tbPeso" TextWrapping="Wrap" Background="White" Height="30"/>
        </StackPanel>

        <StackPanel Margin="337,140,359,1451">
            <Label Content="VALOR VENDA:" Width="96" Height="28"/>
        </StackPanel>
        <StackPanel Margin="446,138,231,1453" >
            <TextBox x:Name="tbValorVenda" TextWrapping="Wrap" Background="White" Height="31" Width="129"/>
        </StackPanel>


    </Grid>

</UserControl>
 

