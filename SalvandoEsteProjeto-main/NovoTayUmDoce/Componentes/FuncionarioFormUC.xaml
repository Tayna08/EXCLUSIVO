<UserControl x:Class="NovoTayUmDoce.Componentes.FuncionarioFormUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NovoTayUmDoce.Componentes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Bisque" Margin="0,-4,0,4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>


        <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Center">
            <Button x:Name="btCancelar" Content="FECHAR" Margin="10" Background="#FFFFA4A4" VerticalAlignment="Bottom" Height="52" Width="134" Foreground="#DD000000" FontWeight="Bold" Click="btCancelar_Click" Cursor="Hand"/>
            <Button x:Name="btSalvar" Content="SALVAR"  Margin="10" Background="#FFFFA4A4" Height="52" Width="133" Foreground="#DD000000" FontWeight="Bold" Cursor="Hand" Click="btSalvar_Click"/>
            <Button x:Name="btEmitirRelatorio" Content="Emitir Relatório"  Margin="10" Background="#FFFFA4A4" Height="52" Width="133" Foreground="#DD000000" FontWeight="Bold" Cursor="Hand" Click="btEmitirRelatorio_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <WrapPanel Margin="0 5">

                <Label Content="CIDADE:"  Margin="0 0 0 0" />
                <TextBox x:Name="tbCidade" TextWrapping="Wrap" Background="White" Height="30" Width="82" />

                <Label Content="BAIRRO:" Margin="10 0 0 0"/>
                <TextBox x:Name="tbBairro" TextWrapping="Wrap" Background="White" Height="30" Width="125" />

                <Label Content="CEP:" Margin="20 0 0 0" />
                <TextBox x:Name="tbCEP" Background="White" Height="30" Width="90"/>

                <Button x:Name="bt" Foreground="#FF928B8B" FontWeight="Bold" Cursor="Hand" Height="35" Width="35" Click="btAddCEP_Click" BorderBrush="#FF928B8B" Background="#FF928B8B" Margin="25,0,0,0"/>

                <Button x:Name="btAddCEP" Foreground="#FF7E7E7E" FontWeight="Bold" Cursor="Hand" Height="35" Width="35" Click="btAddCEP_Click" BorderBrush="#FF897F7F" Margin="-34,0,0,0">
                    <Button.Background>
                        <ImageBrush ImageSource="/Componentes/lupa.png"/>
                    </Button.Background>

                </Button>

            </WrapPanel>

        </StackPanel>

        <StackPanel Grid.Row="1">
            <WrapPanel Margin="0 60">

                <Label Content="RUA:"/>
                <TextBox x:Name="tbRua" Background="White" Height="30" Width="130"/>

                <Label Content="N°:" Margin="10 0 0 0" />
                <TextBox x:Name="tbNumero" TextWrapping="Wrap" Background="White" Height="30" Width="82" />

                <Label Content="COMPLEMENTO:" Margin="10 0 0 0" />
                <TextBox x:Name="tbComplemento" Background="White" Height="30" Width="120"/>

            </WrapPanel>

        </StackPanel>

        <StackPanel RenderTransformOrigin="0.5,0.5" Margin="0,179,1,0" Cursor="Hand" Grid.RowSpan="2">
            <StackPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.042"/>
                    <TranslateTransform/>
                </TransformGroup>
            </StackPanel.RenderTransform>
            <WrapPanel Margin="0 115">

                <Label Content="FUNÇÃO:"/>
                <TextBox x:Name="tbFuncao" TextWrapping="Wrap" Background="White" Height="30" Width="200" />

                <Label Content="SALÁRIO:" Margin="20 0 0 0" />
                <TextBox x:Name="tbSalario" Background="White" Height="30" Width="170"/>

            </WrapPanel>

        </StackPanel>


        <StackPanel VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Height="142">
            <WrapPanel>
                <Label Content="NOME:" Margin="0 15 0 0" />
                <TextBox x:Name="tbNome" TextWrapping="Wrap" Background="White" Height="30" Width="458" />
            </WrapPanel>

            <WrapPanel Margin="0 20 0 0">
                <Label Content="CPF:" Margin="0 0 0 0"/>
                <TextBox x:Name="tbCpf" TextWrapping="Wrap" Background="White" Height="30" Width="473" />
            </WrapPanel>

            <WrapPanel Margin="0 20 0 0">
                <Label Content="E-MAIL:" Width="55"/>
                <TextBox x:Name="tbEmail" TextWrapping="Wrap" Background="White" Height="30" Width="150" />

                <Label Content="CONTATO:" Margin="20 0 0 0"/>
                <TextBox x:Name="tbContato" TextWrapping="Wrap" Background="White" Height="30" Width="215" />

            </WrapPanel>

        </StackPanel>


        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">

            <Label Content="DATA NASCIMENTO:" HorizontalAlignment="Center"/>

            <DatePicker x:Name="dtpData" Width="180" Margin="0 10"/>


        </StackPanel>

    </Grid>
</UserControl>