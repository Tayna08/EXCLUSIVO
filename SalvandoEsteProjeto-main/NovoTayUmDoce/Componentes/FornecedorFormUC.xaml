<UserControl x:Class="NovoTayUmDoce.Componentes.FornecedorFormUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NovoTayUmDoce.Componentes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="Bisque">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="312*"/>
            <ColumnDefinition Width="73*"/>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="332*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="190,361,0,0" Width="420" Height="67" Grid.ColumnSpan="5">
            <Button x:Name="btCancelar" Content="CANCELAR" Background="#FFFFA4A4" Margin="18,0,100,10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="52" Width="133" Foreground="#DD000000" FontWeight="Bold" Click="btCancelar_Click" Cursor="Hand"/>
            <Button x:Name="btSalvar" Content="SALVAR" Background="#FFFFA4A4" Margin="18,0,100,10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="52" Width="133" Foreground="#DD000000" FontWeight="Bold" Click="btSalvar_Click" Cursor="Hand"/>
        </StackPanel>

        <StackPanel Margin="50,40,156,478">
            <Label Content="NOME FANTASIA:"/>
        </StackPanel>
        <StackPanel Margin="156,40,40,478" Grid.ColumnSpan="5">
            <TextBox x:Name="tbNomeFan" TextWrapping="Wrap" Background="White" Height="30"/>
        </StackPanel>

        <StackPanel Margin="50,90,126,422">
            <Label Content="NOME REPRESENTANTE:"/>
        </StackPanel>
        <StackPanel Margin="190,90,40,422" Grid.ColumnSpan="5">
            <TextBox x:Name="tbNomeRe" TextWrapping="Wrap" Background="White" Height="30"/>
        </StackPanel>

        <StackPanel Margin="50,142,170,374">
            <Label Content="CNPJ:" Height="37"/>
        </StackPanel>
        <StackPanel Margin="87,142,10,374" Grid.ColumnSpan="2">
            <TextBox x:Name="tbCNPJ" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="50,195,12,314" Grid.ColumnSpan="2">
            <Label Content="RAZÃO SOCIAL:"/>
        </StackPanel>
        <StackPanel Margin="144,195,12,310" Grid.ColumnSpan="3">
            <TextBox x:Name="tbRazaoSocial" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="7,195,269,310" Grid.Column="3" Grid.ColumnSpan="2">
            <Label Content="BAIRRO:"/>
        </StackPanel>
        <StackPanel  Margin="19,195,40,310" Grid.Column="4">
            <TextBox x:Name="tbBairro" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="1,244,288,250" Grid.Column="3" Grid.ColumnSpan="2">
            <Label Content="CIDADE:"/>
        </StackPanel>
        <StackPanel Margin="16,244,40,250" Grid.Column="4">
            <TextBox x:Name="tbCidade" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="50,244,5,246" Grid.ColumnSpan="2">
            <Label Content="RUA:"/>
        </StackPanel>
        <StackPanel Margin="87,244,12,246" Grid.ColumnSpan="3">
            <TextBox x:Name="tbRua" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="0,294,246,216" Grid.Column="4">
            <Label Content="NÚMERO:"/>
        </StackPanel>
        <StackPanel Margin="66,294,40,216" Grid.Column="4">
            <TextBox x:Name="tbNumero" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="50,294,161,216">
            <Label Content="COMPLEMENTO:"/>
        </StackPanel>
        <StackPanel Margin="156,294,0,216" Grid.ColumnSpan="4">
            <TextBox x:Name="tbComplemento" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="50,354,161,216">
            <Label Content="Email:"/>
        </StackPanel>
        <StackPanel Margin="156,354,0,216" Grid.ColumnSpan="4">
            <TextBox x:Name="tbEmail" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="10,142,10,374" Grid.Column="2" Grid.ColumnSpan="2">
            <Label Content="CONTATO:" Width="65" Height="28"/>
        </StackPanel>
        <StackPanel Margin="0,142,40,361" Grid.Column="4">
            <TextBox x:Name="tbContato" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <ComboBox Background="White" x:Name="cbEst" HorizontalAlignment="Left" Margin="172,381,0,0" VerticalAlignment="Top" Width="120"  Grid.Column="4"/>

    </Grid>
</UserControl>

