<UserControl x:Class="NovoTayUmDoce.Componentes.PedidoFormUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NovoTayUmDoce.Componentes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="Bisque" Margin="0,-4,0,4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="401*"/>
            <ColumnDefinition Width="399*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="190,361,0,0" Width="420" Height="67" Grid.ColumnSpan="2">
            <Button x:Name="btCancelar" Content="CANCELAR" Background="#FFFFA4A4" Margin="18,0,100,10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="52" Width="133" Foreground="#DD000000" FontWeight="Bold" Click="btCancelar_Click" Cursor="Hand"/>
            <Button x:Name="btSalvar" Content="SALVAR" Background="#FFFFA4A4" Margin="18,0,100,10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="52" Width="133" Foreground="#DD000000" FontWeight="Bold" Cursor="Hand" Click="btSalvar_Click"/>
        </StackPanel>

        <StackPanel Margin="50,90,215,698">
            <Label Content="TOTAL:"/>
        </StackPanel>
        <StackPanel Margin="55,90,22,691">
            <TextBox x:Name="tbTotal" TextWrapping="Wrap" Background="White" Height="30" Width="234" RenderTransformOrigin="-0.034,0.668"/>
        </StackPanel>

        <StackPanel Margin="40,146,269,712" Grid.Column="1">
            <Label Content="DESCONTO:"/>
        </StackPanel>
        <StackPanel  Margin="127,147,39,650" Grid.Column="1">
            <TextBox x:Name="tbDesconto" TextWrapping="Wrap" Background="White" Height="26"/>
        </StackPanel>

        <StackPanel Margin="31,201,288,595" Grid.Column="1">
            <Label Content="PRODUTO:"/>
        </StackPanel>
        <StackPanel Margin="109,201,40,641" Grid.Column="1">
            <TextBox x:Name="tbProduto" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="31,250,288,595" Grid.Column="1">
            <Label Content="STATUS:"/>
        </StackPanel>
        <StackPanel Margin="89,250,40,595" Grid.Column="1">
            <TextBox x:Name="tbStatus" TextWrapping="Wrap" Background="White" Height="27" />
        </StackPanel>

        <StackPanel Margin="50,247,21,549">
            <Label Content="QUANTIDADE:"/>
        </StackPanel>
        <StackPanel Margin="140,245,80,551">
            <TextBox x:Name="tbQuantidade" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="50,197,21,599">
            <Label Content="FORMA PAGAMENTO:"/>
        </StackPanel>
        <StackPanel Margin="180,193,10,603">
            <TextBox x:Name="tbFormaPag" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="50,299,250,491">
            <Label Content="DELIVERY:"/>
        </StackPanel>
        <StackPanel Margin="120,295,10,495">
            <TextBox x:Name="tbDelivery" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="3,145,235,643">
            <Label Content="HORA:" Width="73" Height="28"/>
        </StackPanel>
        <StackPanel Margin="135,145,21,694" >
            <TextBox x:Name="tbHora" TextWrapping="Wrap" Background="White" Height="27" Width="244"/>
        </StackPanel>

        <StackPanel Margin="64,90,288,740" Grid.Column="1">
            <Label Content="DATA:" Width="115" Height="28"/>
        </StackPanel>
        <StackPanel Margin="67,79,40,740" Grid.Column="1">
            <DatePicker x:Name="dtpData" Grid.Column="4" HorizontalAlignment="Left" Margin="50,0,0,0" Width="242" Height="38"/>
        </StackPanel>
        <ComboBox Background="White" x:Name="cbCli" HorizontalAlignment="Left" Margin="224,370,0,0" VerticalAlignment="Top" Width="120" Grid.Column="1" SelectionChanged="cbCli_SelectionChanged"/>
        <ComboBox Background="White" x:Name="cbFun" HorizontalAlignment="Left" Margin="40,377,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cbFun_SelectionChanged"/>
        <ComboBox Background="White" x:Name="cbPro" HorizontalAlignment="Left" Margin="10,328,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cbPro_SelectionChanged" Grid.Column="1"/>

    </Grid>

</UserControl>