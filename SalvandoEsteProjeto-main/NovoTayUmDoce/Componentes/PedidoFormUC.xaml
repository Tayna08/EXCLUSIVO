<UserControl x:Class="NovoTayUmDoce.Componentes.PedidoFormUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NovoTayUmDoce.Componentes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="Bisque" Margin="0,-4,0,4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="95*"/>
            <ColumnDefinition Width="101*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="174,361,0,0" Width="420" Height="67" Grid.ColumnSpan="2" Grid.Column="1">
            <Button x:Name="btCancelar" Content="CANCELAR" Background="#FFFFA4A4" Margin="18,0,100,10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="52" Width="133" Foreground="#DD000000" FontWeight="Bold" Click="btCancelar_Click" Cursor="Hand"/>
            <Button x:Name="btSalvar" Content="SALVAR" Background="#FFFFA4A4" Margin="18,0,100,10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="52" Width="133" Foreground="#DD000000" FontWeight="Bold" Click="btSalvar_Click" Cursor="Hand"/>
        </StackPanel>

        <StackPanel Margin="34,90,210,698" Grid.Column="1">
            <Label Content="TOTAL:"/>
        </StackPanel>
        <StackPanel Margin="39,90,17,748" Grid.Column="1">
            <TextBox x:Name="tbTotal" TextWrapping="Wrap" Background="White" Height="30" Width="234" RenderTransformOrigin="-0.034,0.668"/>
        </StackPanel>

        <StackPanel Margin="45,146,269,654" Grid.Column="2">
            <Label Content="DESCONTO:"/>
        </StackPanel>
        <StackPanel  Margin="132,147,39,650" Grid.Column="2">
            <TextBox x:Name="tbDesconto" TextWrapping="Wrap" Background="White" Height="26"/>
        </StackPanel>

        <StackPanel Margin="36,201,288,595" Grid.Column="2">
            <Label Content="PRODUTO:"/>
        </StackPanel>
        <StackPanel Margin="114,201,40,641" Grid.Column="2">
            <TextBox x:Name="tbProduto" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="36,250,288,595" Grid.Column="2">
            <Label Content="STATUS:"/>
        </StackPanel>
        <StackPanel Margin="94,250,40,595" Grid.Column="2">
            <TextBox x:Name="tbStatus" TextWrapping="Wrap" Background="White" Height="27" />
        </StackPanel>

        <StackPanel Margin="34,247,16,549" Grid.Column="1">
            <Label Content="QUANTIDADE:"/>
        </StackPanel>
        <StackPanel Margin="124,245,75,551" Grid.Column="1">
            <TextBox x:Name="tbQuantidade" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="34,197,16,599" Grid.Column="1">
            <Label Content="FORMA PAGAMENTO:"/>
        </StackPanel>
        <StackPanel Margin="164,193,36,603" Grid.Column="1">
            <TextBox x:Name="tbFormaPag" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="34,299,245,491" Grid.Column="1">
            <Label Content="DELIVERY:"/>
        </StackPanel>
        <StackPanel Margin="104,295,0,495" Grid.Column="1">
            <TextBox x:Name="tbDelivery" TextWrapping="Wrap" Background="White" Height="27" Width="343"/>
        </StackPanel>

        <StackPanel Margin="3,145,230,643" Grid.ColumnSpan="2">
            <Label Content="DESCONTO:" Width="73" Height="28"/>
        </StackPanel>
        <StackPanel Margin="119,145,16,698" Grid.Column="1" >
            <TextBox x:Name="tbDescontoPed" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="69,90,288,691" Grid.Column="2">
            <Label Content="DATA:" Width="115" Height="28"/>
        </StackPanel>
        <StackPanel Margin="72,79,40,702" Grid.Column="2">
            <DatePicker x:Name="dtpData" Grid.Column="4" HorizontalAlignment="Left" Margin="50,0,0,0" Width="242" Height="38"/>
        </StackPanel>
        <ComboBox x:Name="cbCli" Grid.Column="1" HorizontalAlignment="Left" Margin="39,386,0,0" VerticalAlignment="Top" Width="120" Background="White"/>
        <ComboBox   x:Name="cbFun" Grid.Column="2" HorizontalAlignment="Left" Margin="245,378,0,0" VerticalAlignment="Top" Width="120" Background="White"/>

    </Grid>

</UserControl>