<Window x:Class="NovoTayUmDoce.Janelas.CadastrarPagamento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NovoTayUmDoce.Janelas"
        mc:Ignorable="d"
        Title="CadastrarPagamento" WindowStartupLocation="CenterScreen"
        Height="500" Width="800"
        MinHeight="400" MinWidth="300"
        FontFamily="Arial"
        FontSize="16">

    <Grid Background="#FFD18D9F">
        <Grid.RowDefinitions>
            <RowDefinition Height="667.4"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FFFFD3D3" CornerRadius="50" Padding="10" Margin="10,28,10,203" />

        <Grid Margin="0,28,0,221">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image Source="/logo/TayUmDoce.png" RenderTransformOrigin="-2.093,0.225" VerticalAlignment="Top" HorizontalAlignment="Right" Width="200" Height="175" Margin="0,0,16,0"/>

        </Grid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,361,0,0" Width="420" Height="67"/>

        <StackPanel Margin="50,50,208,560">
            <Label Content="N°"/>
        </StackPanel>

        <StackPanel Margin="80,50,650,560">
            <TextBox x:Name="tbID" TextWrapping="Wrap" Background="White" TextChanged="tbValor_TextChanged"/>
        </StackPanel>

        <StackPanel Margin="150,50,208,407">
            <Label Content="DATA:"/>
        </StackPanel>

        <StackPanel Margin="200,50,500,560">
            <DatePicker x:Name="dtpDataPag" Height="28" VerticalAlignment="Top"/>
        </StackPanel>

        <StackPanel Margin="310,50,429,560">
            <Label Content="HORA"/>
        </StackPanel>

        <StackPanel Margin="370,50,357,560">
            <TextBox x:Name="tbHora" TextWrapping="Wrap" Background="White" TextChanged="tbValor_TextChanged"/>
        </StackPanel>

        <StackPanel Margin="50,90,50,493">
            <Label Content="DESPESA:"/>
        </StackPanel>

        <StackPanel Margin="145,90,200,500">
            <ComboBox x:Name="tbPagamento"  Background="White" />
        </StackPanel>

        <StackPanel Margin="50,140,50,350">
            <Label Content="FORNECEDOR:"/>
        </StackPanel>

        <StackPanel Margin="185,140,200,350">
            <ComboBox x:Name="tbFornecedor"  Background="White"/>
        </StackPanel>

        <StackPanel Margin="60,195,50,447">
            <Label Content="FORMA DE :" Width="706"/>
        </StackPanel>

        <StackPanel Margin="50,215,50,350">
            <Label Content="PAGAMENTO" Width="688"/>
        </StackPanel>

        <StackPanel Margin="50,260,10,350">
            <Label Content="PARCELA:" Width="688"/>
        </StackPanel>

        <StackPanel Margin="340,260,321,350">
            <Label Content="OBSERVAÇÃO:" Width="688"/>
        </StackPanel>
        
        <StackPanel Margin="479,260,140,356">
            <ComboBox x:Name="tbObsPag"  Background="White"/>
        </StackPanel>

        <StackPanel Margin="185,260,480,356">
            <ComboBox x:Name="tbParcelaPag"  Background="White"/>
        </StackPanel>

        <StackPanel Margin="165,200,500,356">
            <ComboBox x:Name="tbFormPag"  Background="White"/>
        </StackPanel>

        <StackPanel Margin="310,200,395,430">
            <ComboBox x:Name="tbDivisao"  Background="White"  />
        </StackPanel>

        <StackPanel Margin="415,200,50,447">
            <Label Content="VALOR:"/>
        </StackPanel>

        <StackPanel Margin="450,200,190,350">
            <ComboBox x:Name="tbValorPag"  Background="White" Width="100"  />
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,380,0,0" Width="420" Height="67">
            <Button x:Name="btSalvar" Content="SALVAR" Background="#FFFFA4A4" Margin="18,0,100,10" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="50" Width="137" Foreground="#DD000000" FontWeight="Bold" Click="btSalvar_Click"/>
            <Button x:Name="btCancelar" Content="CANCELAR" Background="#FFFFA4A4" Margin="18,0,100,10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="52" Width="133" Foreground="#DD000000" FontWeight="Bold" Click="btCancelar_Click"/>
        </StackPanel>

    </Grid>
</Window>
