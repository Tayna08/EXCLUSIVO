<Window x:Class="TayUmDoceProjeto.Janelas.CadastrarEstoque"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TayUmDoceProjeto.Janelas"
        mc:Ignorable="d"
        Title="CadastrarEstoque"
         WindowStartupLocation="CenterScreen"
        Height="500" Width="800"
        MinHeight="400" MinWidth="300"
        FontFamily="Arial"
        FontSize="16">

    <Grid Background="#FFD18D9F">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FFFFD3D3" CornerRadius="50" Padding="10" Margin="10,28,10,25" Grid.RowSpan="2" />

        <Grid Margin="0,28,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image Source="/logo/TayUmDoce.png" RenderTransformOrigin="-2.093,0.225" VerticalAlignment="Top" HorizontalAlignment="Right" Width="200" Height="175" Margin="0,0,16,0"/>

        </Grid>

        <Button x:Name="btSalvar" Content="SALVAR" Background="#FFFFA4A4" Margin="210,0,0,10" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="50" Width="137" Foreground="#DD000000" FontWeight="Bold" Click="btSalvar_Click" />
        <Button x:Name="btCancelar" Content="CANCELAR"  Background="#FFFFA4A4" Margin="0,0,213,8" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="52" Width="133" Foreground="#DD000000" FontWeight="Bold" Click="tbCancelar_Click"/>

        <StackPanel Margin="50,45,208,100">
            <Label Content="PRODUTO:"/>
            <TextBox x:Name="tbProduto" TextWrapping="Wrap" Background="White" Height="30"/>
        </StackPanel>

        <StackPanel Margin="50,120,208,100">
            <Label Content="MARCA:"/>
            <TextBox x:Name="tbMarca" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="50,200,100,100">
            <Label Content="TIPO:"/>
            <TextBox x:Name="tbTipo" TextWrapping="Wrap" Background="White" Height="27"/>

        </StackPanel>

        <StackPanel Margin="50,280,100,100">
            <Label Content="DESCRIÇÃO:"/>
            <TextBox x:Name="tbDescricao" TextWrapping="Wrap" Background="White" Grid.Row="1"/>
        </StackPanel>
    </Grid>

</Window>
