<Window x:Class="NovoTayUmDoce.Janelas.CadastrarFuncionario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NovoTayUmDoce.Janelas"
        mc:Ignorable="d"
        Title="CadastrarFuncionario" 
        WindowStartupLocation="CenterScreen"
        Height="500" Width="800"
        MinHeight="400" MinWidth="300"
        FontFamily="Arial"
        FontSize="16">

    <Grid Background="#FFD18D9F">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FFFFD3D3" CornerRadius="50" Padding="10" Margin="10,28,10,25" Grid.RowSpan="2" />

        <Grid Margin="0,28,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image Source="/logo/TayUmDoce.png" RenderTransformOrigin="-2.093,0.225" VerticalAlignment="Top" HorizontalAlignment="Right" Width="200" Height="175" Margin="0,0,16,0"/>

        </Grid>

        <Button x:Name="btSalvar" Content="SALVAR" Background="#FFFFA4A4" Margin="194,0,0,64" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="50" Width="137" Foreground="#DD000000" FontWeight="Bold" Click="btSalvar_Click"/>
        <Button x:Name="btCancelar" Content="CANCELAR" Background="#FFFFA4A4" Margin="0,0,229,62" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="52" Width="133" Foreground="#DD000000" FontWeight="Bold"  Click="btCancelar_Click"/>

        <StackPanel Margin="50,35,208,392" Grid.ColumnSpan="2">
            <Label Content="NOME:"/>
            <TextBox x:Name="tbNome" TextWrapping="Wrap" Background="White" Height="30"/>
        </StackPanel>

        <StackPanel Margin="50,95,208,333" Grid.ColumnSpan="2">
            <Label Content="CPF:"/>
            <TextBox x:Name="tbCpf" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="50,160,208,273" Grid.ColumnSpan="2">
            <Label Content="DATA NASCIMENTO:"/>
            <DatePicker x:Name="dtpData" Height="28" VerticalAlignment="Top"/>
        </StackPanel>


        <StackPanel Margin="50,220,499,213">
            <Label Content="CONTATO:"/>
            <TextBox x:Name="tbContato" TextWrapping="Wrap" Background="White" Grid.Row="1"/>
        </StackPanel>

        <StackPanel Margin="400,220,56,207">
            <Label Content="E-MAIL:"/>
            <TextBox x:Name="tbEmail" TextWrapping="Wrap" Background="White" Height="27" Grid.Row="2"/>
        </StackPanel>

        <StackPanel Margin="50,280,499,153">
            <Label Content="FUNÇÃO:"/>
            <TextBox x:Name="tbFuncao" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="400,280,56,153">
            <Label Content="SALÀRIO:"/>
            <TextBox x:Name="tbSalario" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>
    </Grid>

</Window>

    