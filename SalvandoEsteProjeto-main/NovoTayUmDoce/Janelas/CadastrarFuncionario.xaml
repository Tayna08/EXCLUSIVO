<Window x:Class="NovoTayUmDoce.Janelas.CadastrarFuncionario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NovoTayUmDoce.Janelas"
        mc:Ignorable="d"
        Title="CadastrarFuncionario" 
        WindowStartupLocation="CenterScreen"
        Height="500" Width="800"
        MinHeight="400" MinWidth="300"
        FontFamily="Arial"
        FontSize="16">

    <Grid Background="#FFD18D9F">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FFFFD3D3" CornerRadius="50" Padding="10" Margin="10,28,10,125" />

        <Grid Margin="0,28,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image Source="/logo/TayUmDoce.png" RenderTransformOrigin="-2.093,0.225" VerticalAlignment="Top" HorizontalAlignment="Right" Width="200" Height="175" Margin="0,0,16,0"/>

        </Grid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,388,0,0" Width="420" Height="67">
            <Button x:Name="btSalvar" Content="SALVAR" Background="#FFFFA4A4" Margin="18,0,100,10" VerticalAlignment="Bottom" Height="50" Width="137" Foreground="#DD000000" FontWeight="Bold" Click="btSalvar_Click"/>
            <Button x:Name="btCancelar" Content="CANCELAR" Background="#FFFFA4A4" Margin="18,0,100,10" VerticalAlignment="Bottom" Height="52" Width="133" Foreground="#DD000000" FontWeight="Bold" Click="btCancelar_Click"/>
        </StackPanel>

        <StackPanel Margin="50,27,208,495">
            <Label Content="NOME:"/>
            <TextBox x:Name="tbNome" TextWrapping="Wrap" Background="White" Height="30"/>
        </StackPanel>

        <StackPanel Margin="50,85,208,333" Grid.ColumnSpan="2">
            <Label Content="CPF:"/>
            <TextBox x:Name="tbCpf" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="50,150,499,273">
            <Label Content="DATA NASCIMENTO:"/>
            <DatePicker x:Name="dtpData" Height="28" VerticalAlignment="Top"/>
        </StackPanel>


        <StackPanel Margin="321,150,208,213">
            <Label Content="CONTATO:"/>
            <TextBox x:Name="tbContato" TextWrapping="Wrap" Background="White" Grid.Row="1"/>
        </StackPanel>

        <StackPanel Margin="50,210,431,207">
            <Label Content="E-MAIL:"/>
            <TextBox x:Name="tbEmail" TextWrapping="Wrap" Background="White" Height="27" Grid.Row="2"/>
        </StackPanel>

        <StackPanel Margin="50,265,517,259">
            <Label Content="BAIRRO:"/>
            <TextBox x:Name="tbBairro" TextWrapping="Wrap" Background="White" Height="27" Grid.Row="2"/>
        </StackPanel>

        <StackPanel Margin="400,210,56,312">
            <Label Content="CIDADE::"/>
            <TextBox x:Name="tbCidade" TextWrapping="Wrap" Background="White" Height="27" Grid.Row="2"/>
        </StackPanel>


        <StackPanel Margin="50,325,562,207">
            <Label Content="COMPLEMENTO"/>
            <TextBox x:Name="tbComplemento" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="259,325,307,207">
            <Label Content="FUNÇÃO:"/>
            <TextBox x:Name="tbFuncao" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="306,265,208,259">
            <Label Content="RUA:"/>
            <TextBox x:Name="tbRua" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="616,265,56,259">
            <Label Content="N°:"/>
            <TextBox x:Name="tbNumero" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="522,325,56,207">
            <Label Content="SALÀRIO:"/>
            <TextBox x:Name="tbSalario" TextWrapping="Wrap" Background="White" Height="27" TextChanged="tbSalario_TextChanged"/>
        </StackPanel>
    </Grid>

</Window>

    