<Window x:Class="TayUmDoceProjeto.Janelas.CadastrarProduto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TayUmDoceProjeto.Janelas"
        mc:Ignorable="d"
        Title="CadastrarProduto" 
        x:Name="ResponsiveWindow"
        WindowStartupLocation="CenterScreen"
        Height="500" Width="800"
        MinHeight="400" MinWidth="300"
        FontFamily="Arial"
        FontSize="16">

    <Grid Background="#FFD18D9F">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FFFFD3D3" CornerRadius="50" Padding="10" Margin="10,28,10,100" />

        <Grid Margin="0,28,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image Source="/logo/TayUmDoce.png" RenderTransformOrigin="-2.093,0.225" VerticalAlignment="Top" HorizontalAlignment="Right" Width="200" Height="175" Margin="0,4,18,0"/>

        </Grid>

        <Button x:Name="brSalvar" Content="SALVAR" Background="#FFFFA4A4" Margin="188,0,0,105" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="50" Width="137" Foreground="#DD000000" FontWeight="Bold" Click="btSalvar_Click"/>
        <Button x:Name="brCancelar" Content="CANCELAR" Background="#FFFFA4A4" Margin="0,0,238,103" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="52" Width="133" Foreground="#DD000000" FontWeight="Bold" Click="btCancelar_Click"/>

        <StackPanel Margin="50,10,208,100">
            <Label Content="CONTROLE N°"/>
            <TextBox x:Name="Numero" TextWrapping="Wrap" Background="White" Margin="0,2,0,184"/>
        </StackPanel>

        <StackPanel Margin="50,80,208,100">
            <Label Content="NOME:"/>
            <TextBox x:Name="tbNome" TextWrapping="Wrap" Background="White" Height="30"/>
        </StackPanel>

        <StackPanel Margin="50,140,208,100">
            <Label Content="DESCRIÇÃO:"/>
            <TextBox x:Name="tbDescricao" TextWrapping="Wrap" Background="White" Height="27"/>
        </StackPanel>

        <StackPanel Margin="50,360,580,100">
            <Label Content="DATA FABRICAÇÃO:"/>
            <DatePicker x:Name="dtpData" Height="30"/>
        </StackPanel>

        <StackPanel Margin="50,195,100,19">
            <Label Content="QUANTIDADE:"/>
            <TextBox x:Name="tbQuantidade" TextWrapping="Wrap" Background="White" Margin="3,2,110,184"/>
        </StackPanel>

        <StackPanel Margin="50,250,100,19">
            <Label Content="PESO:"/>
            <TextBox x:Name="tbPeso" TextWrapping="Wrap" Background="White" Margin="3,2,110,184"/>
        </StackPanel>
        <StackPanel Margin="50,305,100,19">
            <Label Content="VALOR:"/>
            <TextBox x:Name="tbValor" TextWrapping="Wrap" Background="White" Margin="3,2,110,184"/>
        </StackPanel>
    </Grid>
</Window>