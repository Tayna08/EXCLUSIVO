<Window   x:Class="TayUmDoceProjeto.Janelas.CadastrarCliente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TayUmDoceProjeto.Janelas"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Cadastrar Cliente" 
        WindowStartupLocation="CenterScreen"
        Height="500" Width="800"
        MinHeight="400" MinWidth="300"
        FontFamily="Arial"
        FontSize="16">
    <Window.Resources>
        <Style x:Key="MeuTextBox" TargetType="{x:Type TextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border BorderThickness="{TemplateBinding Border.BorderThickness}"
                            BorderBrush="{TemplateBinding Border.BorderBrush}"
                            Background="{TemplateBinding Panel.Background}"
                            SnapsToDevicePixels="True"
                            CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"
                                      Focusable="false"
                                      HorizontalScrollBarVisibility="Hidden"
                                      VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--AQUI VOU MEXER PRO BOTÃO FICAR REDONDO-->
        <Style x:Key="MeuBotaoRedondo" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Rectangle Fill="{TemplateBinding Background}" 
                                   Stroke="{TemplateBinding BorderBrush}"
                                   StrokeThickness="{TemplateBinding BorderThickness}"
                                   RadiusX="10"
                                   RadiusY="10"
                                   Width="{TemplateBinding ActualWidth}"
                                   Height="{TemplateBinding ActualHeight}"/>
                            <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>

                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <FontFamily x:Key="Lato">/formularioCadastrarFuncionario;component/MainWindow.xaml/NomeDoArquivoDeFonte.ttf#Lato</FontFamily>

    </Window.Resources>


    <Grid Background="#FFD18D9F" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1441*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>



        <!--Imagem-->

        <Border Background="#FFFFD3D3" CornerRadius="50" Margin="40,39,33,40" />

        <!--Imagem-->

        <Grid Margin="195,39,-523,88" RenderTransformOrigin="0.5,0.5" Grid.Column="1">
            <Grid.Resources>
                <Style x:Key="RoundImageStyle" TargetType="{x:Type Image}">
                    <Setter Property="Width" Value="200"/>
                    <Setter Property="Height" Value="200"/>
                    <Setter Property="Stretch" Value="UniformToFill"/>
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="Clip">
                        <Setter.Value>
                            <EllipseGeometry Center="100,100" RadiusX="100" RadiusY="100"/>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Grid.Resources>
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
            <Grid.RowDefinitions>
                <RowDefinition Height="277*"/>
                <RowDefinition Height="151*"/>
            </Grid.RowDefinitions>

            <Image Source="/logo/TayUmDoce.jpg" Style="{StaticResource RoundImageStyle}" RenderTransformOrigin="-2.093,0.225" Margin="-439,3,0,28" VerticalAlignment="Stretch" Width="200" HorizontalAlignment="Left"/>

        </Grid>

        <StackPanel VerticalAlignment="Center" Height="484" Grid.ColumnSpan="2">

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="DATA NASCIMENTO:" Margin="60,120,127,-10"  />
                <DatePicker x:Name="dtpData" Margin="244,118,368,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
            </Grid>

            <Grid Margin="0 5" Width="450">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="462*"/>
                    <ColumnDefinition Width="223*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="CPF:" RenderTransformOrigin="0.526,1.4" Margin="-112,11,116,-12"/>
                <TextBox x:Name="tbCpf" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap"  RenderTransformOrigin="-0.146,-0.247" Background="#FFF9F9F9" Margin="-64,48,177,-46" Grid.ColumnSpan="2" >
                    <TextBox.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="-1"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </TextBox.RenderTransform>
                </TextBox>

            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            </Grid>
            <Grid Width="773">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="272*"/>
                    <ColumnDefinition Width="371*"/>
                </Grid.ColumnDefinitions>

                <Label Content="NOME:" Margin="51,-127,8,191" RenderTransformOrigin="0.066,0.453" />
                <TextBox x:Name="tbNome" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap" Background="White" Margin="112,-123,349,194" Grid.ColumnSpan="3" />
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="RUA:" Margin="8,83,1112,-83" Grid.ColumnSpan="2"/>
                <TextBox x:Name="tbRua" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap"  RenderTransformOrigin="-0.146,-0.247" Background="White" Margin="93,47,806,-39" Grid.ColumnSpan="2" />
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="61*"/>
                    <ColumnDefinition Width="604*"/>
                    <ColumnDefinition Width="42*"/>
                    <ColumnDefinition Width="515*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="CEP:" Grid.Column="2" Margin="469,187,455,-187" Grid.ColumnSpan="3"/>
                <TextBox x:Name="tbCep" Grid.Column="3" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap"  RenderTransformOrigin="-0.146,-0.247" Background="White" Margin="1,193,0,-157" HorizontalAlignment="Left" Width="515" Grid.ColumnSpan="2" />
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="70*"/>
                    <ColumnDefinition Width="34*"/>
                    <ColumnDefinition Width="200*"/>
                    <ColumnDefinition Width="22*"/>
                    <ColumnDefinition Width="20*"/>
                    <ColumnDefinition Width="116*"/>
                    <ColumnDefinition Width="44*"/>
                    <ColumnDefinition Width="631*"/>
                </Grid.ColumnDefinitions>
                <Label
            Content="BAIRRO:" Grid.ColumnSpan="3" Margin="68,-143,10,165"/>
                <TextBox x:Name="tbBairro"
            VerticalAlignment="Top" TextWrapping="Wrap" Style="{StaticResource MeuTextBox}" RenderTransformOrigin="-0.146,-0.247" Margin="11,-138,13,0" Grid.ColumnSpan="5" Grid.Column="2" Background="White"/>
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="248*"/>
                    <ColumnDefinition Width="453*"/>
                    <ColumnDefinition Width="499*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="N°:" RenderTransformOrigin="1.233,-1.139" Grid.Column="1" Margin="2,-140,71,136"/>
                <TextBox x:Name="tbNumero" Grid.Column="1" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap" VerticalAlignment="Top"  RenderTransformOrigin="-0.146,-0.247" Background="#FFFDFDFD" Margin="42,-140,0,0" Grid.ColumnSpan="2" HorizontalAlignment="Left" Width="374" />
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="24.8"/>
                    <ColumnDefinition Width="95.2"/>
                    <ColumnDefinition Width="111*"/>
                    <ColumnDefinition Width="478*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="CIDADE:" Margin="41,-279,112,278" Grid.ColumnSpan="2" Grid.Column="1"/>
                <TextBox x:Name="tbCidade" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap"  RenderTransformOrigin="-0.146,-0.247" Background="White" Margin="21,-275,489,282" Grid.Column="2" Grid.ColumnSpan="2" />
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="587*"/>
                    <ColumnDefinition Width="461*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="COMPLEMENTO:" Margin="66,-166,295,164" Grid.ColumnSpan="2"/>
                <TextBox x:Name="tbComplemento_" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap" VerticalAlignment="Top"  RenderTransformOrigin="-0.146,-0.247" Background="White" Margin="223,-160,150,0" Grid.ColumnSpan="2" />
            </Grid>

            <!--Label-->

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="104.8"/>
                    <ColumnDefinition Width="45.2"/>
                    <ColumnDefinition Width="247*"/>
                    <ColumnDefinition Width="901*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="CONTATO:" Margin="77,-158,111,139" Grid.ColumnSpan="3"/>
                <TextBox x:Name="tbContato" Grid.Column="2" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap" VerticalAlignment="Top"  RenderTransformOrigin="-0.146,-0.247" Background="White" Margin="14,-158,445,0" Grid.ColumnSpan="2" Height="22" />
            </Grid>


            <!--Button-->
            <Grid Margin="0 30 0 0" Height="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btSalvar" Style="{StaticResource MeuBotaoRedondo}"  Content="Salvar" HorizontalAlignment="Left"  Height="68" Width="241" Background="#FFFFA4A4" Margin="485,-351,0,307" Click="btSalvar_Click" Grid.ColumnSpan="2"/>
                <Button x:Name="btCancelar" Grid.Column="1" Style="{StaticResource MeuBotaoRedondo}" Content="Cancelar"  HorizontalAlignment="Left"  Height="68" Width="240" Background="#FFFFA4A4" Margin="486,-235,0,191" Click="btCancelar_Click"/>

            </Grid>
        </StackPanel>
        <Label HorizontalAlignment="Left" Content="Cliente" Margin="628,16,0,718" FontSize="50" Width="249" />
        <Button FontFamily="{StaticResource Lato}" Background="#FFFFA4A4"  Margin="1280,10,13,711" Click="Button_Click" Content="X"/>
    </Grid>

</Window>