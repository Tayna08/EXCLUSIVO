<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TayUmDoceProjeto.Janelas"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="TayUmDoceProjeto.Janelas.CadastrarCliente"
        mc:Ignorable="d"
        Title="CadastrarCliente" 
                x:Name="ResponsiveWindow"
        Height="800"
        Width="1400"
        MinWidth="428"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        FontSize="36"
        FontFamily="Lato">
    <Window.Resources>
        <Style x:Key="MeuTextBox" TargetType="{x:Type TextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border BorderThickness="{TemplateBinding Border.BorderThickness}"
                            BorderBrush="{TemplateBinding Border.BorderBrush}"
                            Background="{TemplateBinding Panel.Background}"
                            SnapsToDevicePixels="True"
                            CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"
                                      Focusable="false"
                                      HorizontalScrollBarVisibility="Hidden"
                                      VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--AQUI VOU MEXER PRO BOTÃO FICAR REDONDO-->
        <Style x:Key="MeuBotaoRedondo" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Rectangle Fill="{TemplateBinding Background}" 
                                   Stroke="{TemplateBinding BorderBrush}"
                                   StrokeThickness="{TemplateBinding BorderThickness}"
                                   RadiusX="10"
                                   RadiusY="10"
                                   Width="{TemplateBinding ActualWidth}"
                                   Height="{TemplateBinding ActualHeight}"/>
                            <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>

                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <FontFamily x:Key="Lato">/formularioCadastrarFuncionario;component/MainWindow.xaml/NomeDoArquivoDeFonte.ttf#Lato</FontFamily>

    </Window.Resources>


    <Grid Background="#FFD18D9F" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1441*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>



        <!--Imagem-->

        <Border Background="#FFFFD3D3" CornerRadius="50" Margin="40,102,33,40" />

        <!--Imagem-->

        <Grid Margin="991,39,33,441">
            <Grid.Resources>
                <Style x:Key="RoundImageStyle" TargetType="{x:Type Image}">
                    <Setter Property="Width" Value="200"/>
                    <Setter Property="Height" Value="200"/>
                    <Setter Property="Stretch" Value="UniformToFill"/>
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="Clip">
                        <Setter.Value>
                            <EllipseGeometry Center="100,100" RadiusX="100" RadiusY="100"/>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="277*"/>
                <RowDefinition Height="151*"/>
            </Grid.RowDefinitions>

            <Image Source="/logo/TayUmDoce.jpg" Style="{StaticResource RoundImageStyle}" RenderTransformOrigin="-2.093,0.225" Margin="103,113,0,7" VerticalAlignment="Stretch" Width="200" Grid.RowSpan="2" HorizontalAlignment="Left"/>

        </Grid>

        <StackPanel Margin="70,0,63,0" VerticalAlignment="Center">

            <Grid Width="773">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Content="NOME:" Margin="-243,180,237,-115" RenderTransformOrigin="0.066,0.453" />
                <TextBox x:Name="tbNome" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap" Background="White" Margin="-126,184,81,-112" Grid.ColumnSpan="2" />
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="DATA NASCIMENTO:" Margin="0,124,0,-125"  />
                <DatePicker x:Name="dtpData" Margin="0,124,348,-124" Grid.Column="1"/>
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="462*"/>
                    <ColumnDefinition Width="223*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="CPF:" RenderTransformOrigin="0.526,1.4" Margin="4,137,785,-137" Grid.ColumnSpan="2"/>
                <TextBox x:Name="tbCpf" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap"  RenderTransformOrigin="-0.146,-0.247" Background="#FFF9F9F9" Margin="84,141,359,-133" Grid.ColumnSpan="2" />

            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="RG:" RenderTransformOrigin="0.526,1.4" Margin="447,71,643,-71" Grid.Column="1"/>
                <TextBox x:Name="tbRg" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap"  RenderTransformOrigin="-0.146,-0.247" Background="White" Margin="527,79,320,-71" Grid.Column="1" />
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="RUA:" Margin="8,83,1112,-83" Grid.ColumnSpan="2"/>
                <TextBox x:Name="tbRua" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap"  RenderTransformOrigin="-0.146,-0.247" Background="White" Margin="93,87,806,-79" Grid.ColumnSpan="2" />
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="61*"/>
                    <ColumnDefinition Width="604*"/>
                    <ColumnDefinition Width="42*"/>
                    <ColumnDefinition Width="515*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="CEP:" Grid.Column="2" Margin="469,187,455,-187" Grid.ColumnSpan="3"/>
                <TextBox x:Name="tbCep" Grid.Column="3" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap"  RenderTransformOrigin="-0.146,-0.247" Background="White" Margin="1,193,0,-157" HorizontalAlignment="Left" Width="515" Grid.ColumnSpan="2" />
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="74*"/>
                    <ColumnDefinition Width="249*"/>
                    <ColumnDefinition Width="23*"/>
                    <ColumnDefinition Width="21*"/>
                    <ColumnDefinition Width="123*"/>
                    <ColumnDefinition Width="47*"/>
                    <ColumnDefinition Width="671*"/>
                </Grid.ColumnDefinitions>
                <Label
            Content="BAIRRO:" Grid.ColumnSpan="2" Margin="4,2,5,-2"/>
                <TextBox x:Name="tbBairro"
            VerticalAlignment="Top" TextWrapping="Wrap" Style="{StaticResource MeuTextBox}" RenderTransformOrigin="-0.146,-0.247" Margin="63,7,33,0" Grid.ColumnSpan="6" Grid.Column="1" Background="White"/>
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="248*"/>
                    <ColumnDefinition Width="453*"/>
                    <ColumnDefinition Width="499*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="N°:" RenderTransformOrigin="1.233,-1.139" Grid.Column="2" Margin="197,-129,199,126"/>
                <TextBox x:Name="tbNumero" Grid.Column="2" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap" VerticalAlignment="Top"  RenderTransformOrigin="-0.146,-0.247" Background="#FFFDFDFD" Margin="259,-121,0,0" Grid.ColumnSpan="2" HorizontalAlignment="Left" Width="374" />
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="24.8"/>
                    <ColumnDefinition Width="95.2"/>
                    <ColumnDefinition Width="111*"/>
                    <ColumnDefinition Width="478*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="CIDADE:" Margin="-1,-27,198,26" Grid.ColumnSpan="3"/>
                <TextBox x:Name="tbCidade" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap"  RenderTransformOrigin="-0.146,-0.247" Background="White" Grid.ColumnSpan="2" Margin="20,-24,628,31" Grid.Column="2" />
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="587*"/>
                    <ColumnDefinition Width="461*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="COMPLEMENTO:" Grid.Column="1" Margin="348,-177,364,176" Grid.ColumnSpan="2"/>
                <TextBox x:Name="tbComplemento_" Grid.Column="2" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap" VerticalAlignment="Top"  RenderTransformOrigin="-0.146,-0.247" Background="White" Margin="52,-176,5,0" />
            </Grid>

            <!--Label-->

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="104.8"/>
                    <ColumnDefinition Width="45.2"/>
                    <ColumnDefinition Width="247*"/>
                    <ColumnDefinition Width="901*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="CONTATO:" Margin="1,-71,207,71" Grid.ColumnSpan="3"/>
                <TextBox x:Name="tbContato" Grid.Column="2" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap" VerticalAlignment="Top"  RenderTransformOrigin="-0.146,-0.247" Background="White" Margin="29,-65,721,0" Grid.ColumnSpan="2" />
            </Grid>

            <Grid Margin="0 5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="E-MAIL:" Margin="443,-134,558,131" Grid.Column="1"/>
                <TextBox x:Name="tbEmail" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap" VerticalAlignment="Top"  RenderTransformOrigin="-0.146,-0.247" Background="White" Margin="578,-129,4,0" Grid.Column="1" />
            </Grid>


            <!--Button-->
            <Grid Margin="0 30 0 0" Height="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btSalvar" Style="{StaticResource MeuBotaoRedondo}"  Content="Salvar" HorizontalAlignment="Left"  Height="68" Width="241" Background="#FFFFA4A4" Margin="226,-142,0,98" Click="btSalvar_Click"/>
                <Button x:Name="btCancelar" Grid.Column="1" Style="{StaticResource MeuBotaoRedondo}" Content="Cancelar"  HorizontalAlignment="Left"  Height="68" Width="240" Background="#FFFFA4A4" Margin="72,-142,0,98" Click="btCancelar_Click"/>

            </Grid>
        </StackPanel>
        <Label HorizontalAlignment="Left" Content="Cliente" Margin="628,16,0,718" FontSize="50" Width="249" />
        <Button FontFamily="{StaticResource Lato}" Background="#FFFFA4A4" Margin="1280,10,13,711" Click="Button_Click" Content="X"/>

        <materialDesign:TimePicker HorizontalAlignment="Left" Margin="986,155,0,0" VerticalAlignment="Top"/>

    </Grid>

</Window>