<Window x:Class="TayUmDoceProjeto.Janelas.CadastrarProduto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TayUmDoceProjeto.Janelas"
        mc:Ignorable="d"
        Title="CadastrarProduto" 
                x:Name="ResponsiveWindow"
         Height="800"
        Width="1400"
        MinWidth="428"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        FontSize="36"
        FontFamily="Lato">
    <Window.Resources>
        <Style x:Key="MeuTextBox" TargetType="{x:Type TextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border BorderThickness="{TemplateBinding Border.BorderThickness}"
                            BorderBrush="{TemplateBinding Border.BorderBrush}"
                            Background="{TemplateBinding Panel.Background}"
                            SnapsToDevicePixels="True"
                            CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"
                                      Focusable="false"
                                      HorizontalScrollBarVisibility="Hidden"
                                      VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--AQUI VOU MEXER PRO BOTÃO FICAR REDONDO-->
        <Style x:Key="MeuBotaoRedondo" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Rectangle Fill="{TemplateBinding Background}" 
                                   Stroke="{TemplateBinding BorderBrush}"
                                   StrokeThickness="{TemplateBinding BorderThickness}"
                                   RadiusX="10"
                                   RadiusY="10"
                                   Width="{TemplateBinding ActualWidth}"
                                   Height="{TemplateBinding ActualHeight}"/>
                            <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>

                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <FontFamily x:Key="Lato">/formularioCadastrarFuncionario;component/MainWindow.xaml/NomeDoArquivoDeFonte.ttf#Lato</FontFamily>

    </Window.Resources>


    <Grid Background="#FFD18D9F" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1441*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>



        <!--Imagem-->

        <Border Background="#FFFFD3D3" CornerRadius="50" Margin="40,102,33,40" >
            <DatePicker x:Name="dtpData" Margin="910,307,55,-307"/>
        </Border>

        <!--Imagem-->

        <Grid Margin="971,39,33,541">
            <Grid.Resources>
                <Style x:Key="RoundImageStyle" TargetType="{x:Type Image}">
                    <Setter Property="Width" Value="200"/>
                    <Setter Property="Height" Value="200"/>
                    <Setter Property="Stretch" Value="UniformToFill"/>
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="Clip">
                        <Setter.Value>
                            <EllipseGeometry Center="100,100" RadiusX="100" RadiusY="100"/>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="277*"/>
                <RowDefinition Height="151*"/>
            </Grid.RowDefinitions>

            <Image Source="/logo/TayUmDoce.jpg" Style="{StaticResource RoundImageStyle}" RenderTransformOrigin="-2.093,0.225" Margin="103,71,0,-78" VerticalAlignment="Stretch" Width="200" Grid.RowSpan="2" HorizontalAlignment="Left"/>

        </Grid>

        <StackPanel Margin="70,0,63,0" VerticalAlignment="Center">
            <Grid Width="773">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Content="CONTROLE N°:" Margin="-217,-47,627,112" RenderTransformOrigin="0.066,0.453" Grid.ColumnSpan="2" />
                <TextBox x:Name="Numero" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap" Background="White" Margin="26,-46,532,118" Grid.ColumnSpan="2" />
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="462*"/>
                    <ColumnDefinition Width="223*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="NOME:" RenderTransformOrigin="0.526,1.4" Margin="18,-64,0,64" HorizontalAlignment="Left" Width="306" Grid.ColumnSpan="2"/>
                <TextBox x:Name="tbNome" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap"  RenderTransformOrigin="-0.146,-0.247" Background="#FFF9F9F9" Margin="65,-60,362,68" Grid.Column="1" Grid.ColumnSpan="2" />

            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="DESCRIÇÃO:" Margin="6,-59,1035,59" Grid.ColumnSpan="2"/>
                <TextBox x:Name="tbDescricao" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap"  RenderTransformOrigin="-0.146,-0.247" Background="White" Margin="85,-55,376,63" Grid.Column="1" />
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="61*"/>
                    <ColumnDefinition Width="604*"/>
                    <ColumnDefinition Width="42*"/>
                    <ColumnDefinition Width="515*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="DATA FABRICAÇÃO:" Grid.Column="2" Margin="355,46,387,-46" Grid.ColumnSpan="3"/>
                <TextBox x:Name="tbPeso" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap" VerticalAlignment="Top"  RenderTransformOrigin="-0.146,-0.247" Background="White" Grid.ColumnSpan="3" Margin="122,-38,122,0" />
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="84*"/>
                    <ColumnDefinition Width="282*"/>
                    <ColumnDefinition Width="26*"/>
                    <ColumnDefinition Width="24*"/>
                    <ColumnDefinition Width="139*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="761*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="PESO:" Margin="7,-105,245,105" Grid.ColumnSpan="3"/>
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="723*"/>
                    <ColumnDefinition Width="515*"/>
                </Grid.ColumnDefinitions>
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="24.8"/>
                    <ColumnDefinition Width="95.2"/>
                    <ColumnDefinition Width="111*"/>
                    <ColumnDefinition Width="478*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="VALOR:" Margin="8,-90,197,89" Grid.ColumnSpan="3"/>
                <TextBox x:Name="tbValor" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap"  RenderTransformOrigin="-0.146,-0.247" Background="White" Grid.ColumnSpan="2" Margin="23,-87,726,94" Grid.Column="2" />
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="587*"/>
                    <ColumnDefinition Width="461*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="QUANTIDADE:" Grid.Column="1" Margin="433,-262,345,260" Grid.ColumnSpan="2"/>
                <TextBox x:Name="tbQuantidade" Grid.Column="2" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap" VerticalAlignment="Top"  RenderTransformOrigin="-0.146,-0.247" Background="White" Margin="104,-256,37,0" />
            </Grid>

            <!--Label-->

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="104.8"/>
                    <ColumnDefinition Width="45.2"/>
                    <ColumnDefinition Width="247*"/>
                    <ColumnDefinition Width="901*"/>
                </Grid.ColumnDefinitions>
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            </Grid>


            <!--Button-->
            <Grid Margin="0 30 0 0" Height="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btSalvar" Style="{StaticResource MeuBotaoRedondo}"  Content="Salvar" HorizontalAlignment="Left" Width="241" Background="#FFFFA4A4" Margin="283,-21,0,-23" Click="btSalvar_Click"/>
                <Button x:Name="btCancelar" Grid.Column="1" Style="{StaticResource MeuBotaoRedondo}" Content="Cancelar"  HorizontalAlignment="Left"  Height="68" Width="240" Background="#FFFFA4A4" Margin="175,-23,0,-21" Click="btCancelar_Click"/>

            </Grid>
        </StackPanel>
        <Label HorizontalAlignment="Left" Content="PRODUTO" Margin="594,26,0,695" FontSize="50" />
        <Button FontFamily="{StaticResource Lato}" Background="#FFFFA4A4" Margin="1280,10,13,711" Click="Button_Click" Content="X"/>

    </Grid>
</Window>
