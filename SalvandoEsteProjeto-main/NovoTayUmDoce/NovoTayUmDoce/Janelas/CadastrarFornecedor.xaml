<Window x:Class="TayUmDoceProjeto.Janelas.CadastrarFornecedor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TayUmDoceProjeto.Janelas"
        mc:Ignorable="d"
        Title="CadastrarFornecedor" 
        x:Name="ResponsiveWindow"
        Height="800"
        Width="1400"
        MinWidth="428"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        FontSize="36"
        FontFamily="Lato">
    <Window.Resources>
        <Style x:Key="MeuTextBox" TargetType="{x:Type TextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border BorderThickness="{TemplateBinding Border.BorderThickness}"
                            BorderBrush="{TemplateBinding Border.BorderBrush}"
                            Background="{TemplateBinding Panel.Background}"
                            SnapsToDevicePixels="True"
                            CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"
                                      Focusable="false"
                                      HorizontalScrollBarVisibility="Hidden"
                                      VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--AQUI VOU MEXER PRO BOTÃO FICAR REDONDO-->
        <Style x:Key="MeuBotaoRedondo" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Rectangle Fill="{TemplateBinding Background}" 
                                   Stroke="{TemplateBinding BorderBrush}"
                                   StrokeThickness="{TemplateBinding BorderThickness}"
                                   RadiusX="10"
                                   RadiusY="10"
                                   Width="{TemplateBinding ActualWidth}"
                                   Height="{TemplateBinding ActualHeight}"/>
                            <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>

                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <FontFamily x:Key="Lato">/formularioCadastrarFuncionario;component/MainWindow.xaml/NomeDoArquivoDeFonte.ttf#Lato</FontFamily>

    </Window.Resources>


    <Grid Background="#FFD18D9F" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1441*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>



        <!--Imagem-->

        <Border Background="#FFFFD3D3" CornerRadius="50" Margin="40,102,33,40" >
            <Label  Content="ESTOQUE:" Margin="666,484,361,121"/>
        </Border>

        <!--Imagem-->

        <Grid Margin="1199,39,33,719">
            <Grid.Resources>
                <Style x:Key="RoundImageStyle" TargetType="{x:Type Image}">
                    <Setter Property="Width" Value="200"/>
                    <Setter Property="Height" Value="200"/>
                    <Setter Property="Stretch" Value="UniformToFill"/>
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="Clip">
                        <Setter.Value>
                            <EllipseGeometry Center="100,100" RadiusX="100" RadiusY="100"/>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="277*"/>
                <RowDefinition Height="151*"/>
            </Grid.RowDefinitions>

            <Image Source="/logo/TayUmDoce.jpg" Style="{StaticResource RoundImageStyle}" RenderTransformOrigin="-2.093,0.225" Margin="-106,47,0,-232" VerticalAlignment="Stretch" Width="201" HorizontalAlignment="Left" Grid.Row="1"/>

        </Grid>

        <StackPanel Margin="70,0,63,0" VerticalAlignment="Center">
            <Grid Width="773">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Content="NOME FANTASIA:" Margin="-232,95,642,-30" RenderTransformOrigin="0.066,0.453" Grid.ColumnSpan="2" />
                <TextBox x:Name="tbNome" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap" Background="White" Margin="59,96,93,-24" Grid.ColumnSpan="2" />
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="462*"/>
                    <ColumnDefinition Width="223*"/>
                </Grid.ColumnDefinitions>

            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="NOME DO FORNECEDOR:" Margin="3,127,829,-127" Grid.ColumnSpan="2"/>
                <TextBox x:Name="tbContato" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap"  RenderTransformOrigin="-0.146,-0.247" Background="White" Margin="49,6,587,2" Grid.Column="1" />
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="61*"/>
                    <ColumnDefinition Width="604*"/>
                    <ColumnDefinition Width="42*"/>
                    <ColumnDefinition Width="515*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="N°:" Grid.Column="2" Margin="458,3,8,-3"/>
                <TextBox x:Name="tbNumero" Grid.Column="2" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap"  RenderTransformOrigin="-0.146,-0.247" Background="White" Margin="522,6,0,30" HorizontalAlignment="Left" Width="211" Grid.ColumnSpan="3" />
                <Label  Content="RUA:" Grid.Column="2" Margin="452,208,0,-208" Grid.ColumnSpan="2"/>
                <TextBox x:Name="tbRua" Grid.Column="2" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap"  RenderTransformOrigin="-0.146,-0.247" Background="White" Margin="537,211,0,-175" HorizontalAlignment="Left" Width="506" Grid.ColumnSpan="3" >
                    <TextBox.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="0.082"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </TextBox.RenderTransform>
                </TextBox>
                <Label  Content="FUNCIONARIO:" Margin="6,3,463,-3" Grid.ColumnSpan="3"/>
                <TextBox x:Name="tbFuncionario" Grid.Column="2" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap"  RenderTransformOrigin="-0.146,-0.247" Background="White" Margin="89,9,0,27" HorizontalAlignment="Left" Width="304" />
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="74*"/>
                    <ColumnDefinition Width="249*"/>
                    <ColumnDefinition Width="23*"/>
                    <ColumnDefinition Width="21*"/>
                    <ColumnDefinition Width="123*"/>
                    <ColumnDefinition Width="47*"/>
                    <ColumnDefinition Width="671*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="CONTATO:" Margin="7,-152,207,152" Grid.ColumnSpan="3"/>
                <TextBox x:Name="tbNomeFornecedor" Grid.Column="3" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap" VerticalAlignment="Top"  RenderTransformOrigin="-0.146,-0.247" Background="White" Grid.ColumnSpan="5" Margin="22,-20,329,0" />
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="723*"/>
                    <ColumnDefinition Width="515*"/>
                </Grid.ColumnDefinitions>
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="24.8"/>
                    <ColumnDefinition Width="95.2"/>
                    <ColumnDefinition Width="215*"/>
                    <ColumnDefinition Width="838*"/>
                    <ColumnDefinition Width="88*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="CIDADE:" Margin="-1,-33,195,32" Grid.ColumnSpan="3"/>
                <TextBox x:Name="tbCidade" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap"  RenderTransformOrigin="-0.146,-0.247" Background="White" Grid.ColumnSpan="2" Margin="20,-29,0,36" Grid.Column="2" HorizontalAlignment="Left" Width="491" />
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="587*"/>
                    <ColumnDefinition Width="461*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="CNPJ:" Grid.Column="1" Margin="458,-88,222,87" Grid.ColumnSpan="2"/>
                <TextBox x:Name="tbCnpj" Grid.Column="1" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap" VerticalAlignment="Top"  RenderTransformOrigin="-0.146,-0.247" Background="White" Margin="562,-85,23,0" Grid.ColumnSpan="2" />
            </Grid>

            <!--Label-->

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="104.8"/>
                    <ColumnDefinition Width="45.2"/>
                    <ColumnDefinition Width="247*"/>
                    <ColumnDefinition Width="901*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="BAIRRO:" Margin="1,-86,7,86" Grid.ColumnSpan="2"/>
                <TextBox x:Name="tbBairro" Grid.Column="1" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap" VerticalAlignment="Top"  RenderTransformOrigin="-0.146,-0.247" Background="White" Margin="44,-84,622,0" Grid.ColumnSpan="3" />
                <TextBox x:Name="tbComplememto" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap" VerticalAlignment="Top"  RenderTransformOrigin="-0.146,-0.247" Background="White" Margin="121,-6,642,0" Grid.Column="2" Grid.ColumnSpan="2" />
                <TextBox x:Name="tbEstoque" Style="{StaticResource MeuTextBox}" TextWrapping="Wrap" VerticalAlignment="Top"  RenderTransformOrigin="-0.146,-0.247" Background="White" Margin="428,-6,96,0" Grid.Column="3" />
            </Grid>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label  Content="COMPLEMENTO:" Margin="-5,-73,972,73" Grid.ColumnSpan="2"/>
            </Grid>


            <!--Button-->
            <Grid Margin="0 30 0 0" Height="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btSalvar" Style="{StaticResource MeuBotaoRedondo}"  Content="Salvar" HorizontalAlignment="Left"  Height="68" Width="241" Background="#FFFFA4A4" Margin="261,-65,0,21" Click="btSalvar_Click"/>
                <Button x:Name="btCancelar" Grid.Column="1" Style="{StaticResource MeuBotaoRedondo}" Content="Cancelar"  HorizontalAlignment="Left"  Height="68" Width="240" Background="#FFFFA4A4" Margin="153,-67,0,23"/>

            </Grid>
        </StackPanel>
        <Label HorizontalAlignment="Center" Content="FORNECEDOR" Margin="0,23,0,720" FontSize="50" />
        <Button FontFamily="{StaticResource Lato}" Background="#FFFFA4A4" Margin="1309,7,3,720" Content="X" Click="Button_Click"/>

    </Grid>
</Window>
